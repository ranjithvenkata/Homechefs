<p id="notice"><%= notice %></p>

<h1>Dishes</h1>

<table>
  <thead>
  <tr>
    <th>User</th>
    <th>Dish name</th>
    <th colspan="2">Timeoflastorder</th>
    <th>Maxorder</th>
    <th>Ready by</th>
    <th>Price</th>
    <th colspan="2">Image</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.user.name %></td>
        <td><%= dish.dish_name %></td>
        <td colspan="2"><%= dish.time_of_last_order %></td>
        <td><%= dish.maxOrder %></td>
        <td><%= dish.Ready_by %></td>
        <td><%= dish.price %></td>
        <td colspan="2"><%= image_tag dish.avatar_url.to_s, height: 150, width: 150 %></td>
        <td><%= link_to 'Show', dish %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

